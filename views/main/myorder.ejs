
<!DOCTYPE html>
<html lang="zh-cn" ng-app="SKFanApp">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=0">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
	<title>饭掌柜系统 - <%= title %></title>

    <!-- Bootstrap -->
    <link href="/renders/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->

<% include mainTmplHeader %>

	<div class="clearfix" style="min-height:30px"></div>
	<div id="main" class="row" ng-controller="OrderCtrl">
		<article class="col-xs-12 col-sm-9 col-md-9">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title">我的订单</h4> <span class="text-right"><h4>我的余额: ￥ <%= money %></h4></span>
					</div>
					<div class="modal-body">
						<table class="table table-bordered table-hover">
							<thead>
								<tr class="info">
									<th>订单号</th>
									<th>名称</th>
									<th>单价</th>
									<th>数量</th>
									<th>需求</th>
									<th>提交时间</th>
									<th>完成时间</th>
									<!--<th>状态</th>-->
									<th>取餐</th>
								</tr>
							</thead>
							<tbody>
							<% orders.forEach(function(order){ %>
								<tr>
									<th><%= order.id %></th>
									<td><%= order.name %></td>
									<td><%= order.price %></td>
									<td><%= order.count %></td>
									<td><%= order.extra %></td>
									<td><%= order.placeTime %></td>
									<td><%= order.finishTime %></td>
									<!--<td><%= status[order.status] %></td>-->								
									<td><button class="btn btn-success btnOrder" id="btngetCof<%= order.id %>" name="button" value="<%= order.status %>" onclick="getCof(this.id)" disabled></button></td>
								</tr>
							<% }); %>
							</tbody>
						</table>
					</div>
				</div>
		</article>
	</div>

<!--<% include mainTmplFooter %>-->
				</div>
				<footer class="col-xs-12 col-sm-10 col-sm-offset-2 text-center">
					<small class="text-muted">&copy;2015 intel成都</small>
				</footer>	
			</div>
		</div>
		<script src="/js/jquery-1.11.2.min.js"></script>
		<script src="/renders/bootstrap/js/bootstrap.min.js"></script>
		<script src="/js/main.js"></script>
		<% extraScripts.forEach(function(s){ %>
			<script src="/js/<%= extraScripts %>.js"></script>
		<% }) %>
	</body>
</html>
