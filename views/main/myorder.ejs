<% include mainTmplHeader %>

	<div class="clearfix" style="min-height:30px"></div>
	<div id="main" class="row" ng-controller="OrderCtrl">
		<article class="col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="modal-title">我的订单&nbsp&nbsp <span class="text-right">(我的余额: ￥ <%= money %>)</span>&nbsp&nbsp<span><button class="btn btn-success" id="" name="ids" value="33" onclick="orderState()">当前订单</button></span></h4>
					</div>
					<div class="panel-body">
						<table class="table table-bordered table-hover" id="table">
							<thead>
								<tr class="info">
									<th style="display:none;">订单号</th>
									<!--<th>订单状态</th>-->
									<th>名称</th>
									<th>单价</th>
									<th>数量</th>
									<th>需求</th>
									<th>提交时间</th>
									<!--<th>完成时间</th>-->
									<th style="display:none;">状态</th>								
								</tr>
							</thead>
							<tbody>
							<% orders.forEach(function(order){ %>
								<tr>
									<th style="display:none;"><%= order.id %></th>
									<!--<td><button class="btn btn-success btnOrder" id="btngetCof<%= order.id %>" name="button" value="<%= order.status %>" onclick="getCof(this.id)" disabled></button></td>-->
									<td><%= order.name %></td>
									<td><%= order.price %>元</td>
									<td><%= order.count %></td>
									<td><%= order.extra %></td>
									<td><%= order.placeTime %></td>
									<!--<td><%= order.finishTime %></td>-->
									<td style="display:none;"><%= order.status %></td>																
								</tr>
							<% }); %>
							</tbody>
						</table>
					</div>
				</div>
		</article>
	</div>

<% include mainTmplFooter %>
