	<script type="text/javascript">
		
		function onSelect(obj){

			var dd = $("#"+"check"+obj).attr("id");
			var cc = $("#"+"count"+obj).attr("id");
			var ii = $("#"+"icon"+obj).attr("id");

			var c = document.getElementById(cc);
			var d = document.getElementById(dd);
			var i = document.getElementById(ii);

			c.value++;
			d.checked = true;

			c.style.display = "block";
			d.style.display = "block";
			i.style.display = "block";

		}

		function del(o){
			var img  = o.substring(5,o.length);

			var dd = $("#"+o).attr("id");
			var cc = $("#"+o).parent().next().children().attr("id");
			var ii = $("#icon"+img).attr("id");

			var c = document.getElementById(cc);
			var d = document.getElementById(dd);
			var i = document.getElementById(ii);

			c.value = 0;
			d.style.display = "none";
			c.style.display = "none";
			i.style.display = "none";
		}

		function confirm(){		
			var conf = document.getElementsByName("checkbox");
			var total = 0;
			var time = 0;

        	for(i=0;i<conf.length;i++){
        		if(conf[i].checked){
        			var count = $("#"+conf[i].id).parent().next().children().attr("value");
        			var p = $("#"+conf[i].id).parent().next().next().next().children(":last").html();
        			var price = p.substring(1,p.length);
        			//alert(count);
        			var temp = count*price;
        			total += temp;
        			time += count*5;
        		}
        	}
        	//alert(total);
        	//alert(time);
        	document.getElementById("total").innerHTML = "总价："+total+"元";
        	document.getElementById("time").innerHTML = "估计取餐时间："+time+"分钟";

		}

		function submit(){
			//alert("www");
			var conf = document.getElementsByName("checkbox");
			var c = new Array();
			var d = new Array();
			for(i=0;i<conf.length;i++){
				if(conf[i].checked){
					//alert(i);
					var count = $("#"+conf[i].id).parent().next().children().attr("value");
					var id = $("#"+conf[i].id).parent().parent().attr("id");
					
					c.push(count);
					d.push(id);				
					//alert(count);
					//alert(id)
				}
			}

			if((c.length == 0) || (d.length == 0)){
				alert("订单为空，请重新下订单");
				top.location = "/";
			}


			else{
				$.ajax({
	            url:'/order/place',
	            type:'POST',
	            //dataType:'json',
	            data:{
	                counts:c,
	                ids:d,
	                type:0
	            },
	            success: function(data){
	            	//alert(data);
            		alert("提交成功！");
            		window.location.href = "/";
            	}
        	});
				}

        		

		}

		function fry(){
			window.location.href = "/";
		}

		function coffee(){
			top.location = "/coffee";
		}

		function myorder(){
			window.location.href = "/myorder";
		}
		
		function activities(){
			window.location.href = "/activities";
		}

		function logout(){
			top.location = "/account/signout";
		}

	</script>

